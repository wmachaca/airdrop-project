{
    "extends": "solhint:recommended",
    "rules": {
        "compiler-version": [
            "error",
            "^0.8.0"
        ],
        "func-visibility": [
            "warn",
            {
                "ignoreConstructors": true
            }
        ],
        "max-line-length": [
            "warn",
            120
        ],
        "no-console": "off",
        "no-inline-assembly": "warn"
    }
}